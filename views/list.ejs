<%- include("header") -%>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>
   
    <div class="box">
      <% newPatient.forEach(function(item){ %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= item._id%>">
          <p>Patient name: <%= `${item.firstName} ${item.lastName}` %></p>
        </div>        
        </form>
        <% }) %>
    </div>
    <div class="box" id="heading">
      <h1 class="h3 mb-3 font-weight-normal">Add New Patient</h1>
    </div>
     
    <form action="/" method="POST">   

      <input
        type="text"
        class=""
        placeholder="First Name"
        name="fName"
        required
        autofocus
        autocomplete="off"
      />
      <input
        type="text"
        class=""
        placeholder="Last Name"
        name="lName"
        required
        autocomplete="off"
      />

      <button class="" type="submit" name="list" value=<%= listTitle %>>
        +
      </button>
    </form>
  </body>

  <%- include("footer") -%>

